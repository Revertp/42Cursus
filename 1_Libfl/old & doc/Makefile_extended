SRCS = ft_isalpha.c ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c ft_strlen.c ft_memset.c ft_bzero.c ft_memcpy.c ft_strlcpy.c ft_strlcat.c ft_toupper.c ft_tolower.c ft_strchr.c ft_strrchr.c ft_strncmp.c ft_strnstr.c
OBJS =  ${SRCS:.c=.o}
OBJSBONUS = ${SRCSBONUS:.c=.o}
HEADER = libft.h

NAME = libft.a

CC = gcc
RM = rm -Rf ..swp -o .ft_ -o   #revisar
CFLAGS = -Wall -Wextra -Werror

%.o : %.c
	${CC} ${CFLAGS} -c $< -o $@

all :		${NAME}

${NAME} :	${OBJS} ${HEADER}
			ar rcs ${NAME} ${OBJS}
			ranlib ${NAME}

bonus : 	${OBJS} ${OBJSBONUS} ${HEADER}
			ar rcs ${NAME} ${OBJS} ${OBJSBONUS}
			ranlib ${NAME}
			@touch $@
clean :
			${RM} ${OBJS} ${OBJSBONUS}

fclean :	clean
			${RM} ${NAME}

re :		fclean all

.PHONY : all clean fclean re
